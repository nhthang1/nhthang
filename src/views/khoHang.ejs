      <div class="card">
        <table class="table table-hover shopping-cart-wrap">
          <thead class="text-muted">
            <tr>
              <th scope="col">Sản phẩm</th>
              <th scope="col" width="120">Số lượng</th>
              <th scope="col" width="120">Giá</th>
              <th scope="col" width="200" class="text-right">Tùy chỉnh</th>
            </tr>
          </thead>
          <tbody>
              <% for (var i = 0; i < clo.length; i++) {%>
            <tr>
              <td>
                <figure class="media">
                  <div class="img-wrap"><img  src="/<%= clo[i].hinh %>"  class="img-thumbnail img-sm"></div>
                  <figcaption class="media-body">
                    <h6 class="title text-truncate"><%= clo[i].tensanpham %> </h6>
                    <dl class="param param-inline small">

                    </dl>
                    <dl class="param param-inline small">

                    </dl>
                  </figcaption>
                </figure> 
              </td>
              <td> 100</td>
              <td> 
                <div class="price-wrap"> 
                  <var class="price"><%= clo[i].dongia %></var> 
                  <small class="text-muted">(VND each)</small> 
                </div> <!-- price-wrap .// -->
              </td>
              <td class="text-right"> 
 
              <a class="btn btn-outline-danger" href="admin/warehouse/<%= clo[i]._id %>">× Remove</a>
                
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
               <!-- Pagination -->

               <nav aria-label="...">
                  <ul class="pagination">
                    <% if (pageCurrent == 1) { %>
                    <li class="page-item disabled">
                      <a class="page-link" href="?pagenumber=<%= parseInt(pageCurrent) - 1  %>" tabindex="-1">Previous</a>
                    </li>
                    <% } else {%>
        
                    <li class="page-item">
                      <a class="page-link" href="?pagenumber=<%= parseInt(pageCurrent) - 1  %>" tabindex="-1">Previous</a>
                    </li>
        
                    <% } %>
        
                    <% for ( var i = 1; i <= totalPage; i++ ) { %>
        
                    <% if (pageCurrent != i) { %>
        
                    <li class="page-item">
                      <a class="page-link" href="?pagenumber=<%= i  %>"><%= i %></a>
                    </li>
                    <% } else {%>
                    <li class="page-item active">
                      <a class="page-link" href="?pagenumber=<%= i  %>"><%= i %> <span class="sr-only">(current)</span></a>
                    </li>
        
                    <% } %>
        
                    <% } %>
        
                    <% if (pageCurrent == totalPage) { %>
        
        
                    <li class="page-item disabled">
                      <a class="page-link" href="?pagenumber=<%= parseInt(pageCurrent) + 1  %>">Next</a>
                    </li>
        
                    <% } else {%>
        
                    <li class="page-item ">
