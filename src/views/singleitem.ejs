<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= Title %></title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/shop-item.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Shop Thập Tam</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/product">Sản phẩm</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Liên hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blogs">Blogs</a>
                    </li>
                </ul>
                <ul class="navbar-nav mx-auto">
                    <li>
                        <a class="btn btn-sm btn-outline-info " href="/signup">Sign up</a>&emsp;
                    </li>
                    <li>
                        <a class="btn btn-sm btn-outline-info  " href="/auth/signIn">Sign in</a>&emsp;
                    </li>
                    <li>
                      <a class="btn btn-sm btn-outline-warning" href="/cart">Giỏ Hàng(<%= cartLength %>)</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">
        <h2 class="my-4">Shop Name</h2>
        <div class="list-group">
            <a href="/product" class="list-group-item">Tất cả sản phẩm</a>
            <a href="/product/nam" class="list-group-item">Thời trang nam</a>
            <a href="/product/nu" class="list-group-item">Thời trang nữ</a>
        </div>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="card mt-4">
          <img class="card-img-top img-fluid" src="/<%= clo.hinh %>" alt="">
          <div class="card-body">
            <h3 class="card-title"><%= clo.tensanpham %></h3>
            <h4><%= clo.dongia %></h4>
            <p class="card-text"><%= clo.mota %></p>
            <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
            4.0 stars
          </div>
        </div>
        <!-- /.card -->

        <div class="card card-outline-secondary my-4">
          <div class="card-header">
            Product Reviews
          </div>
          <div class="card-body">
            <p><%= clo.mota %></p>
            <small class="text-muted">Posted by Anonymous on 3/1/17</small>
            <hr>
            <p>Ship hàng nhanh lẹ</p>
            <small class="text-muted">Posted by Anonymous on 3/1/17</small>
            <hr>
            <p>Sản phẩm như trên hình</p>
            <small class="text-muted">Posted by Anonymous on 3/1/17</small>
            <hr>
            <a href="/cart/add/<%= clo._id %>" class="btn btn-success">Thêm vào giỏ hàng</a>
          </div>
        </div>
        <!-- /.card -->

      </div>
      <!-- /.col-lg-9 -->

    </div>

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>

</body>

</html>
